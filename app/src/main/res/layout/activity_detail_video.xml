<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ua.com.youtubeviewer.activity.DetailVideoActivity">

    <FrameLayout
        android:id="@+id/detail_youtube_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/video_info"/>

    <LinearLayout
        android:id="@+id/video_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_image_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/detail_video_info"
        android:padding="@dimen/activity_image_padding">

        <ImageView
            android:id="@+id/video_detail_cover"
            android:layout_width="@dimen/activity_image_width"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/video_detail_title"
            style="@style/video_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/detail_cover_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>
