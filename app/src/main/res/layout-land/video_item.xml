<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginEnd="@dimen/video_item_layout_margin"
              android:layout_marginRight="@dimen/video_item_layout_margin"
              android:background="@drawable/video_item_shape"
              android:orientation="vertical"
              android:paddingLeft="@dimen/video_item_layout_padding"
              android:paddingRight="@dimen/video_item_layout_padding">

    <ImageView
        android:id="@+id/video_image"
        android:layout_width="@dimen/video_item_image_width"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/video_title"
        style="@style/video_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"/>

</LinearLayout>